<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/abu2"
    android:padding="30dp"
    tools:context=".HomeFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ellipse_profile">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="170dp"
        android:layout_height="34dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/img_profile1"
        android:text="Hello David"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_salam"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_profile1"
        android:text="Good Morning..."
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_notifikasi"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/et_searchItem1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_profile1"
        android:layout_marginTop="30dp"
        android:background="@drawable/custum_text"
        android:drawableRight="@drawable/search"
        android:drawablePadding="5dp"
        android:fontFamily="@font/regular"
        android:hint="Search item" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="170dp"
        android:layout_height="34dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/et_searchItem1"
        android:text="Category"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_category"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_category"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttom_navigation" />

    <!--  Membuat buttom navigation  -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/buttom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f5"

        app:menu="@menu/button_navigation"/>
    <!-- Memanggil menu buttom_navigation -->
</RelativeLayout>