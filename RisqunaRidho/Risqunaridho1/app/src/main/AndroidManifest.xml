            android:exported="true" />
        <activity
            android:name=".petugas.petugasActivity"
            android:exported="true" />
        <activity
            android:name=".produk.produkActivity"
            android:exported="true" />
        <activity
            android:name=".DashbordActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:label="@string/title_activity_dashbord"
            android:theme="@style/Theme.RisqunaRidhoStore.NoActionBar" />
        <activity android:name=".Admin.model.login.LoginActivity" />
