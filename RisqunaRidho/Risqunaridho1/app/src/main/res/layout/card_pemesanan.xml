<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    app:cardCornerRadius="5dp"
    android:background="@drawable/custum_text">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="6dp">

        <TextView
            android:id="@+id/tv_idcard"
            android:layout_width="40dp"
            android:textColor="@color/abu6"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="01"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_idcard"
            android:maxLines="2"
            android:fontFamily="@font/medium"
            android:text="Code"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:maxLines="2"
            android:fontFamily="@font/medium"
            android:textColor="@color/hijau2"
            android:shadowColor="?android:attr/textColorLink"
            android:text="Menunggu Konfirmasi"
            android:textSize="16sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>