<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu2"
    android:padding="30dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".petugas.RegistrasiActivity">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="actionBack"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/TambahPetugas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/back"
            android:fontFamily="@font/medium"
            android:text="Tambah Petugas"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:padding="30dp">
        <EditText
            android:id="@+id/et_nameUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/custum_text"
            android:drawableLeft="@drawable/ic_profile"
            android:drawablePadding="10dp"
            android:fontFamily="@font/regular"
            android:hint="Name"
            android:textSize="15sp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/et_emailUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_nameUp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custum_text"
            android:drawableLeft="@drawable/ic_email2"
            android:drawablePadding="10dp"
            android:fontFamily="@font/regular"
            android:hint="Email"
            android:textSize="15sp"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/et_passwordUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_emailUp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custum_text"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="10dp"
            android:fontFamily="@font/regular"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_telpUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_passwordUp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custum_text"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:fontFamily="@font/regular"
            android:hint="Phone number"
            android:textSize="15sp"
            android:inputType="number"/>

        <TextView
            android:id="@+id/tv_registerfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_telpUp"

            android:layout_marginTop="20dp"
            android:fontFamily="@font/regular"
            android:gravity="center_horizontal"
            android:text="Register for "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_telpUp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custum_text"
            android:drawableLeft="@drawable/ic_role"
            android:drawablePadding="10dp"
            android:fontFamily="@font/regular"
            android:hint="Role"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_role"
            android:layout_marginTop="25dp"
            android:background="@drawable/custum_btn"
            android:fontFamily="@font/medium"
            android:onClick="onClick"
            android:text="Tambah Petugas"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>